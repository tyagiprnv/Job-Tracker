# Google Sheets Configuration
# Get the spreadsheet ID from the URL:
# https://docs.google.com/spreadsheets/d/[SPREADSHEET_ID]/edit
SPREADSHEET_ID=your_spreadsheet_id_here

# Gmail Search Configuration
# How many days back to search for job emails
GMAIL_SEARCH_DAYS=60

# Maximum number of emails to process per run
GMAIL_MAX_RESULTS=500

# Detection Thresholds
# Minimum score to consider an email job-related (default: 5)
DETECTION_THRESHOLD=5

# Minimum similarity score for fuzzy matching (default: 80)
MATCHING_THRESHOLD=80

# Logging
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# DeepSeek API Configuration
# Get your API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-your-api-key-here
DEEPSEEK_MODEL=deepseek-chat
