# Google Sheets Configuration
# Get the spreadsheet ID from the URL:
# https://docs.google.com/spreadsheets/d/[SPREADSHEET_ID]/edit
SPREADSHEET_ID=your_spreadsheet_id_here

# Gmail Search Configuration
# How many days back to search for job emails
GMAIL_SEARCH_DAYS=60

# Maximum number of emails to process per run
GMAIL_MAX_RESULTS=500

# Detection Thresholds
# Minimum score to consider an email job-related (default: 5)
DETECTION_THRESHOLD=5

# Minimum similarity score for fuzzy matching (default: 80)
MATCHING_THRESHOLD=80

# Logging
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# LLM Provider Configuration (for --mode llm)
# Choose one provider and set corresponding API key
LLM_PROVIDER=deepseek  # Options: openai, anthropic, google, deepseek

# API Keys (set the one matching your LLM_PROVIDER)
OPENAI_API_KEY=sk-your-openai-key-here          # From platform.openai.com
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key     # From console.anthropic.com
GOOGLE_API_KEY=your-google-api-key              # From makersuite.google.com/app/apikey
DEEPSEEK_API_KEY=sk-your-deepseek-key           # From platform.deepseek.com

# Optional: Override default model for provider
# LLM_MODEL=gpt-4o-mini                 # For OpenAI
# LLM_MODEL=claude-3-5-haiku-20241022   # For Anthropic
# LLM_MODEL=gemini-1.5-flash            # For Google
# LLM_MODEL=deepseek-chat               # For DeepSeek
